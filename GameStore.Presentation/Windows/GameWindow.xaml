<Window x:Class="GameStore.Presentation.Windows.GameWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:GameStore.Presentation.Windows"
		mc:Ignorable="d"
		Title="Игра мечты" 
		ResizeMode="NoResize" 
		SizeToContent="WidthAndHeight" 
		Icon="/Resources/logo.png"
		Background="{StaticResource GameStore.Background}" WindowStartupLocation="CenterOwner"  >
	<StackPanel>
		<Label x:Name="label" FontSize="72" Content="Зачем тебе игры? Возьми лучше это" HorizontalAlignment="Center" Foreground="White"/>
		<Image Source="/Resources/frog.jpg" Width="{Binding ActualWidth, ElementName=label, Mode=OneWay}"/>
	</StackPanel>
</Window>
